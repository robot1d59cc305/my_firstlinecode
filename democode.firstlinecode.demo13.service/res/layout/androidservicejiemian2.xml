<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button                                      
        android:id="@+id/androidservicejiemian2_button1"
        android:text="启动BasicService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10sp"
        />
    
    <Button                                      
        android:id="@+id/androidservicejiemian2_button2"
        android:text="停止BasicService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10sp"
        />
    
    <Button                                      
        android:id="@+id/androidservicejiemian2_button3"
        android:text="绑定服务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10sp"
        />
    
    <Button                                      
        android:id="@+id/androidservicejiemian2_button4"
        android:text="解绑服务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10sp"
        />
    
</LinearLayout>