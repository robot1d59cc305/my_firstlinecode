<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/liaotianzhujiemian_background"
     >
	
    <!-- 这个xml文件是聊天界面的主要布局 -->

    <ListView
        android:id="@+id/liaotian_jiemian_listview1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#0000" >
    </ListView>
    
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        >
        
        <EditText 
            android:id="@+id/liaotian_jiemian_edittext1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:hint="Type somthing here"
            />
        
        <Button 
            android:id="@+id/liaotian_jiemian_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textSize="17sp"
            />
        
    </LinearLayout>
    
</LinearLayout>