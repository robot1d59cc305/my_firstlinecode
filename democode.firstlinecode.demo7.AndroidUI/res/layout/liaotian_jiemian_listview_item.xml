<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/liaotianzhujiemian_background"
     >
    
    <LinearLayout
        android:id="@+id/liaotian_jiemian_listview_item_left_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:background="@drawable/message_left"
        >
        
        <TextView 
            android:id="@+id/liaotian_jiemian_listview_item_left_linearlayout_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Kugou"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#F4FAF6"
            android:layout_margin="15dp"
            />
        
    </LinearLayout>
    
   	<LinearLayout
   	    android:id="@+id/liaotian_jiemian_listview_item_right_linearlayout"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_gravity="right"
   	    android:layout_margin="10dp"
   	    android:background="@drawable/message_right"
   	    >
   	    
   	    <TextView 
   	        android:id="@+id/liaotian_jiemian_listview_item_right_linearlayout_textview"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:color="#434343"
   	        android:textSize="15sp"
   	        android:gravity="center"
   	        android:text="Hello Kugou"
   	        android:layout_margin="15sp"
   	        />
   	    
   	</LinearLayout>

</LinearLayout>