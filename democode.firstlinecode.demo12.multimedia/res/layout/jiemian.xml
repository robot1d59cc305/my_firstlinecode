        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="jiemian_button3"
        />
    
    <Button 
        android:text="点击进入'音频播放器'功能展示"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="jiemian_button4"
        />
    
    <Button 
        android:text="点击进入'视屏播放器'功能展示"
        android:layout_width="wrap_content"
